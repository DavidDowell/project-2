<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <form class="login-form shadow p-4 my-5 mx-auto bg-body rounded w-75 gradient-bg">
        <div class="d-flex justify-content-center">
          <img class="logo" src="images/tiktak.png" />
        </div>
        <h2 class="text-center text-light h1" style="height: 125px">Login</h2>
        <div class="boxes">
          <div class="box lightest-green"></div>
          <div class="box light-green"></div>
          <div class="box green"></div>
          <div class="box dark-green"></div>
          <div class="box darker-green"></div>
          <div class="box darkest-green"></div>
        </div>
        <div>
          <label for="email" class="col-form-label">Email</label>
          <div>
            <input type="text" class="form-control" id="email">
          </div>
        </div>
        <div>
          <label for="password" class="col-form-label">Password</label>
          <div>
            <input type="password" class="form-control" id="password">
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100 mt-4 p-3">Submit</button>
        <p class="text-center mt-3 mb-0">Don't have an account? <a href="/register">Register here</a></p>
      </form>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.js"></script>
<script src="js/login.js"></script>
<script src="anime/anime.js"></script>
