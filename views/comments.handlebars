    <textarea class="col-12 border-primary rounded-lg" style="height: 100px" name="comment-body"></textarea>
  </div>

  <div class="d-flex col-12 justify-content-center">
    <button class="text-light bg-primary border-light rounded ml-3" type="submit">Add Comment</button>
  </div>
</form>

