   <div class="post">
            <a href="/dashboard/comments/{{id}}" class="text-decoration-none h4 text-dark postTitle">{{title}}</a>
            <p class="postContent">{{post_text}}</p>
            <div class="postInfo"><span class="author">Moo</span> 10 min ago</div>
            <div class="likes">
                <button type="button" class="border-0 p-1" id="upvote"><i class="bi bi-hand-thumbs-up"><span></span></i></button>{{vote_count}}
                <button type="button" class="border-0 p-1"  id="downvote"><i class="bi bi-hand-thumbs-down"></i></button>
             </div>
             <div>
                <p class="yak"></p>
             </div>
            <button class="addCommentBtn">Add Comment</button>

            <form class="addCommentForm closed">
                <textarea type="text" class="commentTextArea" name="commentTextArea"></textarea>
                <label for="commentTextArea"></label>
                <div class="btns">
                    <button class="cancel">Cancel</button>
                    <input class="submit" type="submit"></input>
                </div>
            </form>

            <button class="viewCommentsBtn">{{comments.length}} Comments <div class="icon"><i class="bi bi-caret-down-fill"></div></i></button>


{{#if comments.length}}
<section class="closed">

      {{> comments-info comments}}

</section>
{{/if}}

 </div>
